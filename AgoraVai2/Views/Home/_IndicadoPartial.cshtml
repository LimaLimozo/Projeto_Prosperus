@model AgoraVai2.ViewModel.IndicadorViewModel

@for (var i = 0; i < @Convert.ToInt32(ViewBag.c); i++)
{
    <div class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 text-center align-self-center">
                    <div class="section text-center">
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Indicado @(i+1)</h4>
                                            <fieldset>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(s => Model.indicadoList[i].nome, null, new { @class = "form-style", @placeholder = "Nome Completo Do Indicado" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(s => Model.indicadoList[i].numeroTelefone, null, new { @class = "form-style", @placeholder = "Telefone Do Indicado (com DDD)" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    @Html.TextBoxFor(s => Model.indicadoList[i].observacoes, null, new { @class = "form-style", @placeholder = "Observações" })
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
